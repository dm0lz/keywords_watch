<% content_for :title, @domain.name %>

<div class="py-3">
  <div class="w-full mx-auto px-4 sm:px-6 lg:px-8">
    <div class="">
      <% if notice %>
        <div class="mb-6 p-4 bg-green-500/10 border border-green-500/30 rounded-lg text-green-400 flex items-center" id="notice">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
          </svg>
          <%= notice %>
        </div>
      <% end %>

      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <div>
          <h1 class="font-bold text-2xl text-gray-100"><%= @domain.name %></h1>
        </div>
        <div class="flex items-center gap-4">
          <%= link_to new_app_keyword_path(domain_id: @domain.id), class: "inline-flex items-center px-4 py-2 bg-transparent border-2 border-yellow-500/30 rounded-md font-semibold transition-all duration-200 hover:border-yellow-500/60 hover:bg-yellow-500/10 text-white" do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd" />
            </svg>
            Add keyword
          <% end %>
          <%= render "app/domains/keywords_chart_modal", domain: @domain %>
          <%= render "app/domains/domain_infos_modal", domain: @domain %>
          <%= render "app/domains/technical_seo_modal", domain: @domain %>
          <div class="flex items-center gap-4">
            <%= button_to [:app, @domain], method: :delete, class: "inline-flex items-center px-4 py-2 bg-transparent border-2 border-red-500/30 rounded-md font-semibold transition-all duration-200 hover:border-red-500/60 hover:bg-red-500/10 text-white", data: { turbo_confirm: "Are you sure you want to delete this domain?" } do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
              </svg>
              Delete domain
            <% end %>
          </div>
        </div>
      </div>

    </div>

      <section class="flex flex-col gap-6 mt-3">

        <article class="bg-gray-800 border border-gray-700 rounded-lg">
          <div class="p-2 flex justify-between items-center hover:bg-gray-700 cursor-pointer rounded-t-lg" id="keywords_table_header">
            <div class="flex items-center gap-2">
              <h2 class="font-bold text-gray-100 text-lg px-4">Keywords</h2>
              <div class="flex items-center gap-2 ml-6">
                <div class="rounded-lg p-2">
                  <div class="flex items-center justify-between">
                    <div class="p-2 bg-blue-500/10 rounded-lg">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-yellow-400" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M17 2H7a1 1 0 0 0-1 1v2H4a1 1 0 0 0-1 1v2a5 5 0 0 0 4 4.9A7.002 7.002 0 0 0 11 20v2H8a1 1 0 1 0 0 2h8a1 1 0 1 0 0-2h-3v-2a7.002 7.002 0 0 0 4-6.1 5 5 0 0 0 4-4.9V6a1 1 0 0 0-1-1h-2V3a1 1 0 0 0-1-1ZM5 7h1v1a3 3 0 0 0 2.5 2.96A5.023 5.023 0 0 1 5 9V7Zm14 2a5.023 5.023 0 0 1-3.5 1.96A3 3 0 0 0 18 8V7h1v2Z"/>
                    </svg>
                    </div>
                    <span class="mx-2">
                      <span class="text-sm font-medium text-gray-400">Average Rank</span>
                      <div class="">
                        <span class="text-gray-100">
                          <%= render "app/domains/avg_rank", domain: @domain %>
                        </span>
                      </div>
                    </span>
                  </div>
                </div>

                <div class="rounded-lg p-2">
                  <div class="flex items-center justify-between">
                    <div class="p-2 bg-blue-500/10 rounded-lg">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-blue-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M3 11l7.586-7.586a2 2 0 012.828 0L21 11.586a2 2 0 010 2.828l-7.586 7.586a2 2 0 01-2.828 0L3 13.828a2 2 0 010-2.828z" />
                      </svg>
                    </div>
                    <span class="mx-2">
                      <span class="text-sm font-medium text-gray-400">Total Keywords</span>
                      <div class="">
                        <span class="text-gray-100">
                          <%= render "app/domains/keywords_count", domain: @domain %>
                        </span>
                      </div>
                    </span>
                  </div>
                </div>

                <div class="rounded-lg p-2">
                  <div class="flex items-center justify-between">
                    <div class="p-2 bg-blue-500/10 rounded-lg">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-purple-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3v18h18M9 17v-6m4 6V7m4 10v-4" />
                      </svg>
                    </div>
                    <span class="mx-2">
                      <span class="text-sm font-medium text-gray-400">Tracked Keywords</span>
                      <div class="">
                        <span class="text-gray-100">
                          <%= render "app/domains/tracked_keywords_count", domain: @domain %>
                        </span>
                      </div>
                    </span>
                  </div>
                </div>

                <div class="rounded-lg p-2">
                  <div class="flex items-center justify-between">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 11c1.657 0 3-1.343 3-3S13.657 5 12 5s-3 1.343-3 3 1.343 3 3 3zm0 0v6m0 6s6-4.686 6-10a6 6 0 00-12 0c0 5.314 6 10 6 10z"/>
                    </svg>
                    <span class="mx-2">
                      <span class="text-sm font-medium text-gray-400">Ranked Keywords</span>
                      <div class="">
                        <span class="text-gray-100">
                          <%= render "app/domains/ranked_keywords_count", domain: @domain %>
                        </span>
                      </div>
                    </span>
                  </div>
                </div>

                <div class="rounded-lg p-2">
                  <div class="flex items-center justify-between">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-indigo-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m-5-7h6a2 2 0 012 2v16l-7-3-7 3V5a2 2 0 012-2z"/>
                    </svg>
                    <span class="mx-2">
                      <span class="text-sm font-medium text-gray-400">Indexed Keywords</span>
                      <div class="">
                        <span class="text-gray-100">
                          <%= render "app/domains/indexed_keywords_count", domain: @domain %>
                        </span>
                      </div>
                    </span>
                  </div>
                </div>
              </div>
            </div>
            <div class="flex items-center text-gray-100 mr-6">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-chevron-up "><path d="m18 15-6-6-6 6"></path></svg>
            </div>
          </div>
          <div class="" id="keywords_table_content" data-controller="keywords-filter">
            <% if @domain.keywords.any? %>
              <div>
                <div class="px-8 py-2">
                  <div class="relative">
                    <input
                      type="text"
                      data-keywords-filter-target="input"
                      data-action="input->keywords-filter#filter"
                      placeholder="Search keywords..."
                      class="w-full px-4 py-2 bg-gray-800 border border-gray-700 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                    >
                    <button
                      data-action="click->keywords-filter#clear"
                      class="absolute right-3 top-1/2 transform -translate-y-1/2 text-gray-400 hover:text-white"
                    >
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                      </svg>
                    </button>
                  </div>
                </div>
              </div>
              <div class="px-8 max-h-[470px] overflow-y-auto">
                <div class="overflow-x-auto">
                  <table class="min-w-full divide-y divide-gray-700">
                    <thead>
                      <tr>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Keyword</th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Current Rank</th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Avg Monthly Searches</th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Competition</th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Status</th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">AI Score</th>
                      </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-700" id="keywords" data-controller="keywords-sorting">
                      <% @domain.keywords.order(ranking: :asc).each do |keyword| %>
                        <%= render "app/keywords/keyword", keyword: keyword, data: { keywords_filter_target: "row" } %>
                      <% end %>
                    </tbody>
                  </table>
                </div>
              </div>
            <% else %>
              <div class="text-center py-12 bg-gray-800/50 border border-gray-700 rounded-lg">
                <svg xmlns="http://www.w3.org/2000/svg" class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                </svg>
                <h3 class="mt-2 text-sm font-medium text-gray-300">No keywords</h3>
                <p class="mt-1 text-sm text-gray-400">Get started by adding keywords to monitor for this domain.</p>
                <div class="mt-6">
                  <%= link_to new_app_keyword_path(domain_id: @domain.id), class: "inline-flex items-center px-4 py-2 bg-transparent border-2 border-yellow-500/30 rounded-md font-semibold transition-all duration-200 hover:border-yellow-500/60 hover:bg-yellow-500/10 text-white" do %>
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
                      <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd" />
                    </svg>
                    Add your first keyword
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        </article>

        <article class="bg-gray-800 border border-gray-700 rounded-lg">
          <div class="p-2 flex justify-between items-center hover:bg-gray-700 cursor-pointer rounded-t-lg" id="competitors_table_header">
            <div class="flex items-center gap-2">
              <h2 class="font-bold text-gray-100 text-lg px-4">Competitors</h2>
              <div class="flex items-center gap-2">
                <div class="rounded-lg p-2">
                  <div class="flex items-center justify-between">
                    <div class="p-2 bg-blue-500/10 rounded-lg">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-rose-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a4 4 0 00-3-3.87M9 20H4v-2a4 4 0 013-3.87m5-1.13a4 4 0 100-8 4 4 0 000 8zm6 0a4 4 0 100-8 4 4 0 000 8zM3 7a4 4 0 118 0 4 4 0 01-8 0z"/>
                      </svg>
                    </div>
                    <span class="mx-2">
                      <span class="text-sm font-medium text-gray-400">Total Competitors</span>
                      <div class="">
                        <span class="text-gray-100">
                          <%= render "app/domains/competitors_count", domain: @domain %>
                        </span>
                      </div>
                    </span>
                  </div>
                </div>
              </div>
            </div>
            <div class="flex items-center text-gray-100 mr-6">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-chevron-up rotate-180"><path d="m18 15-6-6-6 6"></path></svg>
            </div>
          </div>
          <div class="hidden" id="competitors_table_content" data-controller="competitors-filter">
            <div class="px-8 py-2">
              <div class="relative">
                <input
                  type="text"
                  data-competitors-filter-target="input"
                  data-action="input->competitors-filter#filter"
                  placeholder="Search by domain or keyword..."
                  class="w-full px-4 py-2 bg-gray-800 border border-gray-700 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                >
                <button
                  data-action="click->competitors-filter#clear"
                  class="absolute right-3 top-1/2 transform -translate-y-1/2 text-gray-400 hover:text-white"
                >
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                  </svg>
                </button>
              </div>
            </div>
            <div class="px-8 max-h-[500px] overflow-y-auto">
              <table class="min-w-full divide-y divide-gray-700">
                <thead>
                  <tr>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Domain</th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">SERP Appearances</th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Keywords</th>
                  </tr>
                </thead>
                <tbody class="divide-y divide-gray-700" id="competitors" data-controller="sorting">
                  <% @domain.competitors.order(serp_appearances_count: :desc).each do |competitor| %>
                    <%= render "app/domains/competitor", competitor: competitor %>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </article>

        <article class="bg-gray-800 border border-gray-700 rounded-lg">
          <div class="p-2 flex justify-between items-center hover:bg-gray-700 cursor-pointer rounded-t-lg" id="backlinks_table_header">
            <div class="flex items-center gap-2">
              <h2 class="font-bold text-gray-100 text-lg px-4">Backlinks</h2>
              <div class="flex items-center gap-2 ml-6">
                <div class="rounded-lg p-2">
                  <div class="flex items-center justify-between">
                    <div class="p-2 bg-blue-500/10 rounded-lg">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-cyan-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 010 5.656l-1.414 1.414a4 4 0 01-5.656-5.656l1.414-1.414M10.172 13.828a4 4 0 015.656 0l1.414 1.414a4 4 0 01-5.656 5.656l-1.414-1.414" />
                      </svg>
                    </div>
                    <span class="mx-2">
                      <span class="text-sm font-medium text-gray-400">Total Backlinks</span>
                      <div class="">
                        <span class="text-gray-100">
                          <%= render "app/domains/backlinks_count", domain: @domain %>
                        </span>
                      </div>
                    </span>
                  </div>
                </div>
              </div>
            </div>
            <div class="flex items-center text-gray-100 mr-6">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-chevron-up rotate-180"><path d="m18 15-6-6-6 6"></path></svg>
            </div>
          </div>

          <div class="hidden" id="backlinks_table_content" data-controller="backlinks-filter">
            <div class="px-8 py-2">
              <div class="relative">
                <input
                  type="text"
                  data-backlinks-filter-target="input"
                  data-action="input->backlinks-filter#filter"
                  placeholder="Search by source domain or target URL..."
                  class="w-full px-4 py-2 bg-gray-800 border border-gray-700 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                >
                <button
                  data-action="click->backlinks-filter#clear"
                  class="absolute right-3 top-1/2 transform -translate-y-1/2 text-gray-400 hover:text-white"
                >
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                  </svg>
                </button>
              </div>
            </div>
            <div class="px-8 max-h-[500px] overflow-y-auto">
              <table class="min-w-full divide-y divide-gray-700">
                <thead>
                  <tr>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Type</th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Source Domain</th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Target URL</th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Anchor Text</th>
                  </tr>
                </thead>
                <tbody class="divide-y divide-gray-700" id="backlinks">
                  <% @domain.backlinks.each do |backlink| %>
                    <%= render "app/backlinks/backlink", backlink: backlink %>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </article>

        

      </section>
      <div class="mt-8 pt-6 border-t border-gray-700">
        <%= link_to app_domains_path, class: "inline-flex items-center text-gray-400 hover:text-gray-300 transition-colors" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
          </svg>
          Back to domains
        <% end %>
      </div>
    </div>
  </div>
</div>
