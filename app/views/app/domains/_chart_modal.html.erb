<article data-controller="modal">
  <p data-action="click->modal#open" class="hover:cursor-pointer flex items-center gap-2 border-2 border-yellow-500/30 rounded-md p-2 hover:border-yellow-500/60 hover:bg-yellow-500/10 text-white font-semibold">
    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 inline-block mr-1 text-gray-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17v-6m4 6V7m4 10v-4M5 3v18h14" />
    </svg>
    <span class="">View Chart</span>
  </p>

  <div 
    id="chart-modal" 
    class="fixed inset-0 z-50 flex items-center justify-center bg-black bg-opacity-60 hidden"
    data-modal-target="modal"
  >
    <div class="bg-gray-900 rounded-xl shadow-2xl flex flex-col h-full w-full relative p-8">
      <button 
        type="button" 
        class="absolute top-4 right-4 text-gray-400 hover:text-red-400 transition"
        data-action="click->modal#close"
        aria-label="Close"
      >
        <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
        </svg>
      </button>
      
      <h2 class="text-xl font-bold text-gray-100 mb-4">Keyword Performance Chart</h2>

      <div class="text-gray-300 flex-grow flex flex-col">
        <div class="flex-grow">
          <%= line_chart(
                domain.keywords.where(is_tracked: true).includes(:rankings).map { |k| 
                  { name: k.name, data: k.rankings.group_by { |r| r.created_at.to_date.to_s }
                    .transform_values { |rs| rs.first.rank } } 
                }, 
                height: "100%",  # make chart fill container height
                id: "performance-chart",
                library: {
                  plugins: {
                    legend: {
                      position: 'bottom'  # <-- This moves legend to the bottom
                    }
                  }
                }
              ) %>
        </div>
      </div>
    </div>
  </div>
</article>