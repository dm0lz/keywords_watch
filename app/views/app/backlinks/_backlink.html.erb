<div id="<%= dom_id backlink %>" class="bg-gray-800/50 border border-gray-700 rounded-lg p-6 hover:border-gray-600 transition-colors duration-200 h-full flex flex-col">
  <div class="flex-1">
    <div class="flex items-start justify-between">
      <div class="flex-1">
        <div class="flex items-center space-x-2">
          <a href="<%= backlink.source_url %>" target="_blank" class="text-lg font-semibold text-gray-100 hover:text-yellow-500 transition-colors group-hover:text-yellow-500">
            <%= backlink.source_domain %>
          </a>
          <span class="px-2 py-1 text-sm font-medium rounded-full <%= backlink.nofollow ? 'bg-yellow-500/10 text-yellow-400' : 'bg-green-500/10 text-green-400' %>">
            <%= backlink.nofollow ? "NoFollow" : "DoFollow" %>
          </span>
        </div>
        <div class="mt-1 text-sm text-gray-400 line-clamp-2">
          <%= backlink.page_title %>
        </div>

        <div class="mt-4 grid grid-cols-2 gap-4 text-sm">
          <div class="flex items-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-gray-400 mr-2" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M12.586 4.586a2 2 0 112.828 2.828l-3 3a2 2 0 01-2.828 0 1 1 0 00-1.414 1.414 4 4 0 005.656 0l3-3a4 4 0 00-5.656-5.656l-1.5 1.5a1 1 0 101.414 1.414l1.5-1.5zm-5 5a2 2 0 012.828 0 1 1 0 101.414-1.414 4 4 0 00-5.656 0l-3 3a4 4 0 105.656 5.656l1.5-1.5a1 1 0 10-1.414-1.414l-1.5 1.5a2 2 0 11-2.828-2.828l3-3z" clip-rule="evenodd" />
            </svg>
            <span class="text-gray-400">Target:</span>
            <a href="<%= backlink.target_url %>" target="_blank" class="text-gray-100 ml-2 hover:text-yellow-500 transition-colors truncate block max-w-xs" title="<%= backlink.target_url %>">
              <%= backlink.target_domain %>
            </a>
          </div>
          <div class="flex items-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-gray-400 mr-2" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
            </svg>
            <span class="text-gray-400">Created:</span>
            <span class="text-gray-100 ml-2 font-medium">
              <%= time_ago_in_words(backlink.created_at) %> ago
            </span>
          </div>
        </div>

        <div class="mt-4 pt-4 border-t border-gray-700">
          <div class="flex items-center justify-between">
            <div class="flex items-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-gray-400 mr-2" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4zm2 6a1 1 0 011-1h6a1 1 0 110 2H7a1 1 0 01-1-1zm1 3a1 1 0 100 2h6a1 1 0 100-2H7z" clip-rule="evenodd" />
              </svg>
              <span class="text-gray-400">Anchor:</span>
              <span class="ml-2 px-2 py-1 text-sm font-medium rounded-full bg-blue-500/10 text-blue-400">
                <%= backlink.anchor_text %>
              </span>
            </div>
            <% if backlink.rel_attributes.present? %>
              <div class="flex items-center">
                <span class="text-gray-400">Rel:</span>
                <span class="ml-2 px-2 py-1 text-sm font-medium rounded-full bg-purple-500/10 text-purple-400">
                  <%= backlink.rel_attributes.join(", ") %>
                </span>
              </div>
            <% end %>
          </div>
        </div>

        <% if backlink.context_text.present? %>
          <div class="mt-4 pt-4 border-t border-gray-700">
            <div class="flex items-start">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-gray-400 mr-2 mt-1" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M18 10c0 3.866-3.582 7-8 7a8.841 8.841 0 01-4.083-.98L2 17l1.338-3.123C2.493 12.767 2 11.434 2 10c0-3.866 3.582-7 8-7s8 3.134 8 7zM7 9H5v2h2V9zm8 0h-2v2h2V9zM9 9h2v2H9V9z" clip-rule="evenodd" />
              </svg>
              <div>
                <span class="text-sm font-medium text-gray-400">Context</span>
                <p class="mt-1 text-sm text-gray-300 line-clamp-2"><%= backlink.context_text %></p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="mt-6 pt-4 border-t border-gray-700 flex items-center justify-between">
    <div class="flex items-center space-x-2">
      <% if backlink.meta_description.present? %>
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-500/10 text-blue-400">
          Has meta
        </span>
      <% end %>
    </div>
    <div class="flex items-center space-x-2">
      <%= link_to [:app, backlink], class: "text-gray-400 hover:text-yellow-500 transition-colors" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-11a1 1 0 10-2 0v2H7a1 1 0 100 2h2v2a1 1 0 102 0v-2h2a1 1 0 100-2h-2V7z" clip-rule="evenodd" />
        </svg>
      <% end %>
    </div>
  </div>
</div>
