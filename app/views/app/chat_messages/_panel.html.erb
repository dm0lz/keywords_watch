<%= turbo_stream_from "streaming_channel_#{Current.user.id}" %>
<div id="chat_panel" class="fixed right-0 top-0 h-full w-full max-w-2xl bg-gray-900 text-white border-l border-gray-700 shadow-lg overflow-y-auto z-50">
  <article class="flex flex-col h-full">
    <div class="p-4 border-b border-gray-700 font-bold text-lg fixed top-0 bg-gray-900 w-full max-w-xl">
      <span class="text-yellow-500 ml-2 mr-8 flex items-center" id="toggle_chat_panel">
        <svg id="toggleSidebarIcon" xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-yellow-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
        <span class="ml-4">
          SEO AI Agent
        </span>
      </span>
    </div>
    <div id="chat_messages_container" class="flex flex-col h-full">
      <div id="chat_messages" class="flex flex-col-reverse flex-1 overflow-y-auto p-4 space-y-2 pt-16">
        <% Current.user.chat_messages.reverse.each do |message| %>
          <%= render "app/chat_messages/message", message: message %>
        <% end %>
      </div>
      <%= render "app/chat_messages/form" %>
    </div>
  </article>
</div>
<script>
  document.addEventListener("turbo:load", function() {
    document.getElementById("toggle_chat_panel").addEventListener("click", function() {
      document.getElementById("chat_panel").classList.toggle("max-w-16");
      document.getElementById("chat_panel").classList.toggle("max-w-2xl");
      document.getElementById("chat_messages_container").classList.toggle("hidden");
    });
    const chatMessages = document.getElementById("chat_messages");
    [...chatMessages.querySelectorAll("div > div > div > div > div")][0].scrollIntoViewIfNeeded()
  });
</script>