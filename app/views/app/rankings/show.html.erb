<% content_for :title, "Ranking Details" %>

<div class="py-16">
  <div class="max-w-4xl mx-auto px-4">
    <div class="bg-gray-800 px-6 py-8 border border-gray-700 rounded-xl shadow-xl">
      <% if notice %>
        <div class="mb-6 p-4 bg-green-500/10 border border-green-500/30 rounded-lg text-green-400">
          <%= notice %>
        </div>
      <% end %>

      <div class="mb-8">
        <h1 class="font-bold text-2xl text-gray-100">Ranking Details</h1>
        <p class="text-base text-gray-400 mt-2">
          View and manage ranking information.
        </p>
      </div>

      <div class="bg-gray-800/50 border border-gray-700 rounded-lg p-6 mb-8">
        <%= render @ranking %>
      </div>

      <div class="flex items-center justify-between pt-4 border-t border-gray-700">
        <div class="flex items-center space-x-4">
          <%= link_to "Edit ranking", edit_app_ranking_path(@ranking), class: "px-6 py-3 bg-transparent border-2 border-yellow-500/30 rounded-md font-semibold transition-all duration-200 hover:border-yellow-500/60 hover:bg-yellow-500/10 text-white" %>
          <%= link_to "Back to rankings", app_rankings_path, class: "text-gray-400 hover:text-gray-300 transition-colors" %>
        </div>

        <%= button_to "Delete ranking", [:app, @ranking], method: :delete, class: "px-6 py-3 bg-transparent border-2 border-red-500/30 rounded-md font-semibold transition-all duration-200 hover:border-red-500/60 hover:bg-red-500/10 text-white", data: { turbo_confirm: "Are you sure you want to delete this ranking?" } %>
      </div>
    </div>
  </div>
</div>
