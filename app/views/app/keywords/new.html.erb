<% content_for :title, "New keyword" %>

<div class="py-16">
  <div class="max-w-2xl mx-auto md:w-2/3 w-full px-4">
    <div class="bg-gray-800 px-6 py-8 border border-gray-700 rounded-xl shadow-xl">
      <h1 class="font-bold text-2xl text-gray-100">New keyword</h1>
      <p class="text-base text-gray-400 mt-2">
        Add a new keyword to monitor for your domain.
      </p>

      <%= render "form", keyword: @keyword %>

      <div class="mt-6">
        <%= link_to "Back to Domain", app_domain_path(Domain.find(params[:domain_id])), class: "text-gray-400 hover:text-gray-300 transition-colors" %>
      </div>
    </div>
  </div>
</div>
